{
    "compilerOptions": {
        "strict": true,
        "module": "Node16",
        "checkJs": true,
        "outDir": "dist",
        "target": "ESNext",
        "noImplicitAny": false,
        // GH2774 test case needs global files
        "moduleDetection": "legacy",

        "skipLibCheck": true
    },
    "typedocOptions": {
        "exclude": ["**/ignored.ts"]
    }
}
